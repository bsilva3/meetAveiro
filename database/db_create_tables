CREATE TABLE Tipo(
	Id SERIAL,
	Nome text NOT NULL UNIQUE,
	PRIMARY KEY (Id)
);

CREATE TABLE Utilizador (
    Email text,
    Tipo integer NOT NULL,
    PRIMARY KEY (Email),
    FOREIGN KEY (Tipo) REFERENCES Tipo(Id)
);

CREATE TABLE Conceito (
	NomeConceito text,
	EmailCriador text NOT NULL,
	Latitude float,
	Longitude float,
	Raio float,	
	Descricao text,
	Classificacao float,
	PRIMARY KEY (NomeConceito),
    FOREIGN KEY (EmailCriador) REFERENCES Utilizador(Email)
);

CREATE TABLE Percurso (
	Id SERIAL,
	EmailUser text NOT NULL,
	Titulo text NOT NULL,
	Descricao text,
	Classificacao float,
	Estado text NOT NULL,												-- (*)
	PRIMARY KEY (Id),
    FOREIGN KEY (EmailUser) REFERENCES Utilizador(Email)
);

-- (*) Isto foi o que o Prof. Neves. Estados possíveis:
--        Validado (Criado por um administrador ou apesar de não o ter sido um administrador "validou-o") 
--        Publico (Um utilizador criou-o e deu permissões para este ser público)
--        Privado (Um utilizador criou-o e NÃO deu permissões para este ser público)

CREATE TABLE Ponto (
	IdPonto SERIAL,
	Latitude float NOT NULL,
	Longitude float NOT NULL,
	IdPercurso integer, 
	PRIMARY KEY (IdPonto),
	FOREIGN KEY (IdPercurso) REFERENCES Percurso(Id)
);

CREATE TABLE InstanciaPercurso (
	EmailUser text NOT NULL,
	IdPercurso integer NOT NULL,
	DataInicio timestamp NOT NULL,
	DataFim timestamp NOT NULL,
	PRIMARY KEY (EmailUser, IdPercurso, DataInicio),
	FOREIGN KEY (IdPercurso) REFERENCES Percurso(Id),
	FOREIGN KEY (EmailUser) REFERENCES Utilizador(Email)
);

CREATE TABLE Fotografia (
	IdFoto SERIAL,
	NomeConceito text,
	EmailCriador text NOT NULL,
	Latitude float NOT NULL,
	Longitude float NOT NULL,
	IdPercurso integer, 
	DataInicioInstPercurso timestamp,
	DataFoto timestamp NOT NULL,
	Feedback float,
	Path text NOT NULL,
	PRIMARY KEY (IdFoto),
	FOREIGN KEY (EmailCriador) REFERENCES Utilizador(Email),
	FOREIGN KEY (NomeConceito) REFERENCES Conceito(NomeConceito),
	FOREIGN KEY (EmailCriador, IdPercurso, DataInicioInstPercurso) REFERENCES InstanciaPercurso(EmailUser, IdPercurso, DataInicio)
);
